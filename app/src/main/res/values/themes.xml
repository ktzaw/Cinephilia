<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Cinephilia" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/primaryDarkColor</item>

    </style>

    <style name="Antonio.Regular" parent="">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">@font/antonio_regular</item>
    </style>

    <style name="Toolbar.Antonio.Regular" parent="">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="fontFamily">@font/antonio_semibold</item>
    </style>

    <style name="QuickSand.Regular" parent="">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="QuickSand.Regular.Bold" parent="">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="QuickSand.Bold" parent="">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="QuickSand.Title.Bold" parent="">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>
    
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/antonio_regular</item>
    </style>

</resources>