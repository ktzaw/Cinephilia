<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.screens.fragments.series.SeriesFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkColor">

            <!--            <androidx.appcompat.widget.SearchView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/search_view_height"-->
            <!--                android:layout_margin="@dimen/margin_16"-->
            <!--                android:background="@color/primaryColor"-->
            <!--                app:iconifiedByDefault="false"-->
            <!--                app:defaultQueryHint="@string/search_movies"-->
            <!--                app:queryBackground="@android:color/transparent"-->
            <!--                android:queryHint="@string/search_movies" />-->

            <!--SearchView-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_view_height"
                android:layout_margin="@dimen/margin_16"
                android:background="@color/primaryColor"
                app:cardCornerRadius="@dimen/search_view_corner_radius">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primaryColor"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/primaryColor"
                        android:paddingStart="@dimen/margin_16"
                        android:src="@drawable/ic_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etSearchSeries"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/primaryColor"
                        android:fontFamily="@font/antonio_light"
                        android:hint="@string/search_series"
                        android:paddingStart="@dimen/margin_16"
                        android:textColorHint="@color/search_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnMic"
                        app:layout_constraintStart_toEndOf="@+id/btnSearch"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_16"
                        android:background="@color/search_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnMic"
                        app:layout_constraintStart_toEndOf="@id/etSearchSeries"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btnMic"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@color/primaryColor"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingEnd="@dimen/margin_16"
                        android:src="@drawable/ic_microphone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <include
                layout="@layout/layout_data_list"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>