<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.ktz.cinephilia.ui.screens.fragments.movies.TopRatedMoviesViewObject" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTopRated"
            android:layout_width="0dp"
            android:layout_height="212dp"
            android:layout_marginStart="@dimen/margin_16"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="@dimen/card_elevation"
            app:cardMaxElevation="@dimen/card_max_elevation"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTopRatedPoster"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_margin="@dimen/margin_16"
                    app:cardCornerRadius="@dimen/corner_radius_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivTopRatedPoster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/content_movie_poster" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvTopRatedTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/antonio_regular"
                    android:maxLines="2"
                    android:text='@{data.title ,default = @string/movie_title_placeholder}'
                    android:textSize="@dimen/text_size_medium_2x"
                    app:layout_constraintBottom_toTopOf="@+id/tvTopRatedReleaseDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/cardTopRatedPoster"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTopRatedReleaseDate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/antonio_regular"
                    android:maxLines="2"
                    android:text="@{data.releaseDate, default = @string/release_date_placeholder}"
                    android:textSize="@dimen/text_size_medium_1x"
                    app:layout_constraintBottom_toTopOf="@+id/tvTopRatedRating"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/cardTopRatedPoster"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopRatedTitle" />

                <TextView
                    android:id="@+id/tvTopRatedRating"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_2"
                    android:fontFamily="@font/antonio_regular"
                    android:maxLines="2"
                    android:text="@{Double.toString(data.voteAverage),default = @string/rating_placeholder}"
                    android:textColor="@color/rating_color"
                    android:textSize="@dimen/text_size_medium_1x"
                    app:drawableLeftCompat="@drawable/ic_star"
                    app:layout_constraintBottom_toTopOf="@+id/cg_genre_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/cardTopRatedPoster"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopRatedReleaseDate" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_genre_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/cardTopRatedPoster"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopRatedRating" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>