            android:background="@color/secondaryTextColor"
            android:elevation="@dimen/bottom_navigation_bar_elevation"
            app:bubbletab_icon_size="@dimen/margin_20"
            app:bubbletab_title_size="16sp"
            app:bubbletab_menuResource="@menu/bottom_nav_menu"
            app:bubbletab_custom_font="@font/nunito_bold"
            app:bubbletab_tab_corner_radius="@dimen/bottom_navigation_bar_radius"
