<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />
        <variable
            name="rating"
            type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPoster"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="@dimen/card_elevation"
            app:cardMaxElevation="@dimen/card_max_elevation"
            app:layout_constraintDimensionRatio="1:1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cinephilia_place_holder"
                android:contentDescription="@string/iv_poster_content" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMovietTitle"
            app:layout_constraintTop_toBottomOf="@id/cardPoster"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/antonio_bold"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="@dimen/margin_8"
            android:text="@{title, default = @string/movie_title_placeholder}"
            android:maxLines="1"/>

<!--        <TextView-->
<!--            android:id="@+id/tvRatingText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_marginTop="@dimen/margin_8"-->
<!--            style="@style/Antonio.Regular"-->
<!--            android:text="@string/rating"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:textSize="@dimen/text_size_large_1x"-->
<!--            app:layout_constraintHorizontal_bias="0.0"-->
<!--            app:layout_constraintStart_toStartOf="@id/cardPoster"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tvMovietTitle" />-->

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_8"
            android:fontFamily="@font/antonio_regular"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="@dimen/margin_2"
            android:text="@{rating, default = @string/rating_placeholder}"
            android:textColor="@color/rating_color"
            app:drawableLeftCompat="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovietTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>