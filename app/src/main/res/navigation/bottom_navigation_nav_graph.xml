<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.ktz.cinephilia.ui.screens.fragments.movies.MoviesFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_movies" >

        <action
            android:id="@+id/action_moviesFragment_to_nav_graph_main"
            app:destination="@id/nav_graph_main"/>

    </fragment>
    <fragment
        android:id="@+id/seriesFragment"
        android:name="com.ktz.cinephilia.ui.screens.fragments.tv.TvFragment"
        android:label="SeriesFragment"
        tools:layout="@layout/fragment_tv" />
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.ktz.cinephilia.ui.screens.fragments.watchlist.WatchlistFragment"
        android:label="WatchlistFragment"
        tools:layout="@layout/fragment_watchlist" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.ktz.cinephilia.ui.screens.fragments.favourite.FavouriteFragment"
        android:label="FavouriteFragment"
        tools:layout="@layout/fragment_favourite" />

</navigation>